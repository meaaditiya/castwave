rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isHost(chatRoomId) {
      return get(/databases/$(database)/documents/chatRooms/$(chatRoomId)).data.hostId == request.auth.uid;
    }

    function isApprovedParticipant(chatRoomId, userId) {
      let participantDoc = get(/databases/$(database)/documents/chatRooms/$(chatRoomId)/participants/$(userId));
      return participantDoc.data.status == 'approved';
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /chatRooms/{chatRoomId} {
      // Allow any authenticated user to read the main room document
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if isHost(chatRoomId);
      allow delete: if isHost(chatRoomId);

      match /participants/{userId} {
        // Allow users to see who is in the list to manage join requests
        allow list: if request.auth != null;
        // Users can read their own status, host can read anyone's
        allow get: if isOwner(userId) || isHost(chatRoomId);
        // User can create their own participant document (request to join)
        allow create: if isOwner(userId);
        // Host can update status, user can update their own doc (e.g. for re-requesting)
        allow update: if isHost(chatRoomId) || isOwner(userId);
      }

      match /messages/{messageId} {
        // Only approved participants or the host can read messages
        allow read: if isHost(chatRoomId) || isApprovedParticipant(chatRoomId, request.auth.uid);
        // Only approved participants can create messages
        allow create: if isApprovedParticipant(chatRoomId, request.auth.uid);
        // Host or approved users can vote (update)
        allow update: if isHost(chatRoomId) || isApprovedParticipant(chatRoomId, request.auth.uid);
      }
      
      match /polls/{pollId} {
        // Host or approved users can read polls
        allow read: if isHost(chatRoomId);
        allow create: if isHost(chatRoomId);
        // Host or approved users can vote (update)
        allow update: if isHost(chatRoomId) || isApprovedParticipant(chatRoomId, request.auth.uid);
        allow delete: if isHost(chatRoomId);
      }
    }
  }
}
