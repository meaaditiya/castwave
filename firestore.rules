rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /podcasts/{podcastId} {
      allow read;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.hostId;

      match /messages/{messageId} {
        allow read;
        allow create: if request.auth != null;
        // Allow host to delete messages
        allow delete: if request.auth != null && get(/databases/$(database)/documents/podcasts/$(podcastId)).data.hostId == request.auth.uid;
      }

      match /participants/{userId} {
        allow read;
        // Allow users to add themselves to the participants list
        allow create: if request.auth != null && request.auth.uid == userId;
        // Allow host to update participant status
        allow update, delete: if request.auth != null && get(/databases/$(database)/documents/podcasts/$(podcastId)).data.hostId == request.auth.uid;
      }
    }
  }
}
