
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow update: if request.auth.uid == userId;
    }
    match /users/{userId}/{subcollection}/{docId} {
      allow read, write: if request.auth != null;
    }
    match /chatRooms/{roomId} {
      allow read: if request.auth != null && (resource.data.isPrivate == false || resource.data.hostId == request.auth.uid);
      allow create: if request.auth != null;
      allow update: if request.auth != null && resource.data.hostId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.hostId == request.auth.uid;
    }
    match /chatRooms/{roomId}/{subcollection}/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
