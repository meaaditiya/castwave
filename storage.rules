rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload profile images to a folder named after their user ID.
    // - The file must be an image.
    // - The file size must be less than 5MB.
    // - The user must be authenticated and can only write to their own folder.
    match /profileImages/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
