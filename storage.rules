rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for profile images
    match /profileImages/{userId}/{fileName} {
      // Allow read access to anyone (for displaying profile pictures)
      allow read: if true;
      
      // Allow write access (create, update) only if the user is authenticated,
      // the file is being uploaded to their own folder, it's an image, and it's under 5MB.
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource.size < 5 * 1024 * 1024 &&
                      request.resource.contentType.matches('image/.*');
    }
  }
}
