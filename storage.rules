rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Rule for profile images
    match /profileImages/{userId}/{fileName} {
      // Allow read access to anyone
      allow read: if true;
      
      // Allow write (create, update, delete) only if the user is authenticated
      // and the `userId` in the path matches their own UID.
      // This ensures users can only manage their own profile pictures.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
  }
}
